{
    "name": "eleventy-starter-parcel",
    "version": "1.0.0",
    "description": "An @11ty/eleventy starter using parcel-bundler for production bundling",
    "author": "chrisdmacrae",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "prestart": "run-s clean purescript:build 11ty:build",
        "start": "run-p develop:*",
        "upgrade": "run-s upgrade:*",
        "upgrade:check": "npm-check-updates -u",
        "upgrade:update": "npm update",
        "upgrade:git-unstage-all": "git restore --staged .",
        "upgrade:git-stage-changes": "git add package.json package-lock.json",
        "upgrade:git-auto-commit": "git commit -m 'Upgrade npm packages'; true",
        "dev": "npm run start",
        "repl": "run-p purescript:repl",
        "prebuild": "run-p clean",
        "build": "run-s build:*",
        "develop:server": "serve -l 3000 _site",
        "build:generate": "run-s purescript:install purescript:build 11ty:build parcel:build",
        "develop:generate": "run-p purescript:watch 11ty:watch parcel:watch",
        "clean": "run-p clean:*",
        "clean:cache": "rimraf .tmp",
        "clean:site": "rimraf _site",
        "clean:pure": "rimraf pages/assets/js/pure",
        "11ty:build": "eleventy  --quiet --output .tmp/parcel",
        "11ty:watch": "ELEVENTY_ENV=development eleventy  --quiet --watch --output .tmp/parcel",
        "parcel:build": "parcel build .tmp/parcel/*.html --out-dir _site --cache-dir .tmp/.cache",
        "parcel:watch": "ELEVENTY_ENV=development parcel serve .tmp/parcel/*.html --out-dir _site --cache-dir .tmp/.cache",
        "purescript:repl": "spago repl",
        "purescript:install": "spago install",
        "purescript:build": "spago build --no-share-output --purs-args '--output pages/assets/js/pure '",
        "purescript:watch": "spago build --watch  --clear-screen --no-share-output  --purs-args '--output pages/assets/js/pure '",
        "storybook": "start-storybook",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "alias": {
        "pages": "./pages",
        "includes": "./src/includes",
        "data": "./src/data",
        "css": "./pages/assets/css",
        "js": "./pages/assets/js"
    },
    "dependencies": {
        "@11ty/eleventy": "^0.10.0",
        "@babel/polyfill": "^7.8.7",
        "@fullhuman/postcss-purgecss": "^2.1.2",
        "autoprefixer": "^9.7.6",
        "bower": "^1.8.8",
        "cash-cp": "^0.2.0",
        "chokidar-cli": "^2.1.0",
        "date-fns": "^2.12.0",
        "fast-glob": "^3.2.2",
        "fs-extra": "^9.0.0",
        "globby": "^11.0.0",
        "htm": "^3.0.4",
        "npm-run-all": "^4.1.5",
        "nunjucks": "^3.2.1",
        "parcel-bundler": "^1.12.4",
        "postcss-easy-import": "^3.0.0",
        "rimraf": "^3.0.2",
        "serve": "^11.3.0",
        "tailwindcss": "^1.2.0",
        "workbox-build": "^5.1.2"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-transform-strict-mode": "^7.8.3",
        "@babel/preset-env": "^7.9.5",
        "@storybook/html": "^5.3.18",
        "babel-loader": "^8.1.0",
        "browser-sync": "^2.26.7",
        "npm-check-updates": "^4.1.2",
        "prettier": "^2.0.4"
    }
}
